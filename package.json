{
  "name": "backend-admin",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "nodemon --inspect src/index.js",
    "dev": "nodemon --inspect src/index.js",
    "build": "tsup-node src/data/database/config --format esm --outDir dist/data/database/config && tsup-node src/data/database/migrations --format cjs --outDir dist/data/database/migrations && tsup-node src/data/database/models --format cjs --outDir dist/data/database/models",
    "db-create": "yarn build && NODE_ENV=development sequelize db:create",
    "db-migrate": "yarn build && NODE_ENV=development sequelize db:migrate",
    "db-migrate-revert": "yarn build && sequelize db:migrate:undo:all",
    "db-seed-all": "yarn build && sequelize db:seed:all",
    "db-seed": "yarn build && sequelize db:seed",
    "db-seed-revert": "yarn build && sequelize db:seed:undo:all",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test npx jest --runInBand",
    "dev-backend-admin": "yarn workspace backend-admin dev"
  },
  "dependencies": {     
    "bcryptjs": "^2.4.3",
    "bull": "^4.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "got": "^12.0.2",  
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.4.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "mysql2": "^2.3.3",
    "node-fetch": "^3.2.3",
    "nodemon": "^2.0.15",
    "sequelize": "^6.17.0", 
    "uuid": "^8.3.2"
   },
  "devDependencies": {
    "eslint": "^8.11.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "nodemon": "^2.0.15",
    "sequelize-cli": "^6.4.1",
    "tsup": "^5.12.1"
  }
}
