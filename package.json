{
  "name": "gerobras",
  "version": "1.0.21",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "copy": "cp -r -u ./src/utils/img/* ./deploy/utils/img/",
    "copy-template": "cp -r -u ./src/data/templates/* ./deploy/data/templates/",
    "deploy": "sucrase ./src -d ./deploy --transforms imports && npm run copy && npm run copy-template",
    "start": "npm run deploy && pm2 kill && npx sequelize-cli db:migrate && pm2 start deploy/server.js --name GEROBRAS && pm2 log",
    
    "dev": "nodemon src/server.js",
    "build": "tsup-node src/data/database/config --format esm --outDir dist/data/database/config && tsup-node src/data/database/migrations --format cjs --outDir dist/data/database/migrations && tsup-node src/data/database/models --format cjs --outDir dist/data/database/models",
    "db-create": "yarn sequelize migration:create",
    "db-migrate": "yarn sequelize db:migrate"
  },
  "dependencies": {
    "@accusoft/document-processing-helper": "^1.0.0-beta.10",
    "bcryptjs": "^2.4.3",
    "bee-queue": "^1.4.0",
    "bull": "^4.8.2",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "docx-pdf": "^0.0.1",
    "dotenv": "^8.2.0",
    "exceljs": "^4.3.0",
    "express": "^4.17.1",
    "express-handlebars": "^5.2.0",
    "helmet": "^5.1.0",
    "html-pdf": "^3.0.1",
    "ipware": "^2.0.0",
    "jsonwebtoken": "^8.5.1",
    "libreoffice-convert": "^1.4.1",
    "mammoth": "^1.4.21",
    "moment": "^2.29.3",
    "multer": "^1.4.4-lts.1",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.7.5",
    "nodemailer-express-handlebars": "^5.0.0",
    "numeral": "^2.0.6",
    "pdfmake": "^0.2.5",
    "pg": "^7.14.0",
    "pg-hstore": "^2.3.3",
    "redis": "^3.0.4",
    "request-ip": "^3.3.0",
    "sequelize": "^5.21.2",
    "sqlite3": "^5.0.2",
    "tsup-node": "^0.1.0",
    "utf8": "^3.0.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "nodemon": "^2.0.18",
    "prettier": "^1.19.1",
    "sequelize-cli": "^5.5.1",
    "sucrase": "^3.10.1"
  }
}
